<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.waiend.pddou.core.wishmovie.mapper.WishMovieMapper">
  <resultMap id="BaseResultMap" type="com.waiend.pddou.core.wishmovie.entity.WishMovieEntity">
    <!--@mbg.generated-->
    <!--@Table pddou_wish_movie-->
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="movie_id" jdbcType="INTEGER" property="movieId" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    id, user_id, movie_id
  </sql>

  <select id="selectIsWatchedMovieListByUserId" resultType="com.waiend.pddou.core.wishmovie.vo.WatchedMovieVo">
    SELECT m.id, m.poster, m.`name`, cast(c.user_score/2 as decimal(3,1)) AS user_score, c.content
    FROM (SELECT movie_id, user_score, content FROM pddou_comment WHERE user_id=#{userId}) c
    JOIN pddou_movie m
    ON c.movie_id=m.id
  </select>
</mapper>